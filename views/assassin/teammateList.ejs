 <%

   var listText = "";

   if (playerTeammates.length == 1)
   {
      if (captainFlag == 1)
        listText = "Your teammate is " + playerTeammates[0]['player-name'] + "-" + playerTeammates[0]['player-code'] + ".";
      else
        listText = "Your teammate is " + playerTeammates[0]['player-name'] + ".";

   }
  else
  {
    listText = "Your teammates are ";
    var i = 1;

    playerTeammates.forEach(function(teammate)
    {
      if (captainFlag == 1)
      {
        listText = listText + teammate['player-name'] + "-" + teammate['player-code'];
        if (i++ != playerTeammates.length)
          listText = listText + " and ";
      }
      else
      {
        listText = listText + teammate['player-name'] + " ";
        if (i++ != playerTeammates.length)
          listText = listText + " and ";
      }
    });

    listText = listText + "."

}%>

<%= listText %>

